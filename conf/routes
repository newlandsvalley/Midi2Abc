# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.upload
GET     /home			    controllers.Application.upload

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET 	/upload		    	    controllers.Application.upload
POST 	/upload		    	    controllers.Application.processUpload

GET 	/metadata	    	    controllers.Application.metadata(filename: String, abc: Option[String], tuneImageRef: Option[String], tuneImageError: Option[String])
POST 	/metadata 		    controllers.Application.processMetadata

GET 	/about		    	    controllers.Application.about
GET 	/credits		    controllers.Application.credits	
GET     /contact		    controllers.Application.contact	
GET     /help  		            controllers.Application.help

GET 	/error			    controllers.Application.error(message: String)
